@model TestsSystem.Web.Models.UI.PartialNotification
@using static TestsSystem.Core.Enums.EUserRole
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="fade-in">
        <div class="row mt-3">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">Додати нового користувача</div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="CreateUser">
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <div class="col-sm-2 mb-1">
                                        <input type="text"
                                               name="Name"
                                               class="form-control"
                                               placeholder="Ім'я"
                                               required>
                                    </div>
                                    <div class="col-sm-2 mb-1">
                                        <input type="text"
                                               name="SecondName"
                                               class="form-control"
                                               placeholder="Фамілія"
                                               required>
                                    </div>
                                    <div class="col-sm-2 mb-1">
                                        <input type="text"
                                               name="Email"
                                               class="form-control"
                                               placeholder="Поштова адреса"
                                               required>
                                    </div>
                                    <div class="col-sm-2 mb-1">
                                        <input type="text"
                                               name="Password"
                                               class="form-control"
                                               placeholder="Пароль"
                                               required>
                                    </div>
                                    <div class="col-sm-2 mb-1">
                                        <div class="col-md-12">
                                            <select class="form-control" name="Role">
                                                <option value="@nameof(Prepod)">Викладач</option>
                                                <option value="@nameof(Student)">Студент</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 mb-1">
                                        <button type="submit"
                                                class="btn btn-block btn-dark">
                                            Створити
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @if (Model != null)
                {
                    @await Html.PartialAsync("_Partial_Notification", Model)
                }
            </div>
        </div>
    </div>
</div>